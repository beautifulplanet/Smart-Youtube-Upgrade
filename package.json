{
  "name": "youtube-safety-inspector",
  "version": "3.0.1",
  "description": "Multi-screen content intelligence sidebar for YouTube â€” safety analysis, discovery, and learning",
  "private": true,
  "scripts": {
    "build": "node build.js --target=all",
    "build:chrome": "node build.js --target=chrome",
    "build:firefox": "node build.js --target=firefox",
    "build:edge": "node build.js --target=edge",
    "build:dev": "node build.js --target=chrome --dev",
    "watch": "node build.js --target=chrome --watch",
    "clean": "node -e \"require('fs-extra').removeSync('dist')\"",
    "lint": "eslint extension/content/ extension/popup/ extension/background/",
    "lint:fix": "eslint extension/content/ extension/popup/ extension/background/ --fix",
    "test:backend": "cd backend && python -m pytest tests/ -v",
    "test:frontend": "vitest run",
    "test": "vitest run",
    "package:chrome": "cd dist/chrome && tar -czf ../../packages/chrome.zip .",
    "package:firefox": "cd dist/firefox && tar -czf ../../packages/firefox.zip .",
    "package:edge": "cd dist/edge && tar -czf ../../packages/edge.zip ."
  },
  "devDependencies": {
    "chokidar": "^3.6.0",
    "eslint": "^8.57.0",
    "fs-extra": "^11.2.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "webextension-polyfill": "^0.12.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "beautifulplanet",
  "license": "MIT"
}
