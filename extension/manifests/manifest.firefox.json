{
  "manifest_version": 3,
  "name": "YouTube Safety Inspector",
  "version": "3.0.1",
  "description": "Analyzes YouTube videos for potentially dangerous or misleading content, AI detection, and suggests safe alternatives",
  "browser_specific_settings": {
    "gecko": {
      "id": "youtube-safety-inspector@beautifulplanet",
      "strict_min_version": "109.0"
    }
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtube.com/*",
    "http://localhost:8000/*",
    "https://localhost:8000/*",
    "http://127.0.0.1:8000/*",
    "https://127.0.0.1:8000/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; frame-src https://www.youtube.com https://www.youtube-nocookie.com"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/watch*",
        "https://youtube.com/watch*",
        "https://www.youtube.com/shorts/*",
        "https://youtube.com/shorts/*"
      ],
      "js": [
        "content/utils.js",
        "content/modes.js",
        "content/sidebar.js",
        "content/overlay.js",
        "content/analysis.js",
        "content/content.js"
      ],
      "css": [
        "content/content.css"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://youtube.com/*"
      ],
      "js": [
        "content/bridge.js"
      ],
      "world": "MAIN",
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": ["background/background.js"]
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "content/sidebar.css"
      ],
      "matches": [
        "https://www.youtube.com/*",
        "https://youtube.com/*"
      ]
    }
  ]
}
